<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>PUMPKIN_PLANT_DEF</defName>
    <label>pumpkin plant</label>
    <description>This plant grows a large round fruit protected by a thick orange shell. Pumpkins provide a large amount of food for their grow time but spoil quickly and are almost inedible when raw.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>PumpkinPlant/Plant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>20</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.70</fertilityMin>
			<growDays>7.2</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawPumpkin</harvestedThingDef>
			<harvestYield>24</harvestYield>
			<sowMinSkill>7</sowMinSkill>
      <sowTags>
				<li>Ground</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
      <immatureGraphicPath>PumpkinPlant/Immature</immatureGraphicPath>
      <visualSizeRange>0.5~1.23</visualSizeRange>
     	<wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>

</Defs>
